<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".products.addproduct.AddProductActivity">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="64dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/backButton"
        tools:layout_editor_absoluteX="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="120dp"
                android:layout_height="31dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/amaranth"
                android:foregroundTint="#FFFFFF"
                android:gravity="center"
                android:text=" Store"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#9C9C9C"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <Spinner
                android:id="@+id/colorSpinner"
                android:layout_width="177dp"
                android:layout_height="34dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:entries="@array/colorsItems"
                android:spinnerMode="dialog"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.423"
                app:layout_constraintStart_toEndOf="@+id/productName"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="177dp"
                android:layout_height="34dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:entries="@array/categoryItems"
                android:spinnerMode="dialog"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toTopOf="@+id/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/productSize"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <Spinner
                android:id="@+id/storeSpinner"
                android:layout_width="177dp"
                android:layout_height="34dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:entries="@android:array/imProtocols"
                android:spinnerMode="dialog"
                android:textAlignment="viewStart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="111dp"
                android:layout_height="31dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#38B7FE"
                android:fontFamily="@font/amaranth"
                android:foregroundTint="#FFFFFF"
                android:gravity="center"
                android:text="Product name"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#9C9C9C"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="111dp"
                android:layout_height="31dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#38B7FE"
                android:fontFamily="@font/amaranth"
                android:foregroundTint="#FFFFFF"
                android:gravity="center"
                android:text="Size"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#9C9C9C"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productName" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="111dp"
                android:layout_height="31dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#38B7FE"
                android:fontFamily="@font/amaranth"
                android:foregroundTint="#FFFFFF"
                android:gravity="center"
                android:text="Price"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#9C9C9C"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="111dp"
                android:layout_height="31dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#38B7FE"
                android:fontFamily="@font/amaranth"
                android:foregroundTint="#FFFFFF"
                android:gravity="center"
                android:text="Category"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#9C9C9C"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/colorSpinner" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="111dp"
                android:layout_height="31dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#38B7FE"
                android:fontFamily="@font/amaranth"
                android:foregroundTint="#FFFFFF"
                android:gravity="center"
                android:text="Color"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#9C9C9C"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/textView15"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="120dp"
                android:layout_height="31dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/amaranth"
                android:foregroundTint="#FFFFFF"
                android:gravity="center"
                android:text="Description"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="#9C9C9C"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productPrice" />

            <EditText
                android:id="@+id/productName"
                android:layout_width="168dp"
                android:layout_height="34dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:fontFamily="@font/amaranth"
                android:hint="   Product name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="#B6B6B6"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/productSize"
                android:layout_width="168dp"
                android:layout_height="34dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:fontFamily="@font/amaranth"
                android:hint="   Size"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="#B6B6B6"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:fontFamily="@font/amaranth"
                android:gravity="top|left"
                android:hint="  you can write a message to our..."
                android:inputType="textMultiLine"
                android:textColor="#B6B6B6"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="40dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/productSize"
                tools:layout_editor_absoluteX="2dp" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="40dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/storeSpinner"
                tools:layout_editor_absoluteX="0dp" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="40dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/productDescription"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="244dp"
                android:layout_height="31dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:drawableLeft="@drawable/icon1b"

                android:fontFamily="@font/amaranth"
                android:gravity="center"
                android:text=" Product info"
                android:textAlignment="viewStart"
                android:textColor="#494545"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="244dp"
                android:layout_height="31dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"

                android:drawableLeft="@drawable/icon2b"
                android:fontFamily="@font/amaranth"
                android:gravity="center"
                android:text=" Store info"
                android:textAlignment="viewStart"
                android:textColor="#494545"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="244dp"
                android:layout_height="31dp"

                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:drawableLeft="@drawable/icon3b"
                android:fontFamily="@font/amaranth"
                android:gravity="center"
                android:text=" Additional info"
                android:textAlignment="viewStart"
                android:textColor="#494545"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2" />

            <EditText
                android:id="@+id/productPrice"
                android:layout_width="168dp"
                android:layout_height="34dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:fontFamily="@font/amaranth"
                android:hint="   Price"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="#B6B6B6"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/addButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"


                android:layout_marginTop="32dp"
                android:fontFamily="@font/amaranth"
                android:text="Add"
                android:textSize="16sp"
                app:iconTint="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>