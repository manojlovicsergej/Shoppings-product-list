<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/searchImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/noimageicon" />

    <TextView
        android:id="@+id/searchProductName"
        android:layout_width="204dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/amaranth"
        android:gravity="center"
        android:text="Omeksivac za ves"

        android:textAlignment="textStart"
        android:textColor="@color/backgroundBlue"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/searchImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchProductPrice"
        android:layout_width="86dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amaranth"
        android:text="25400.00"

        android:textColor="@color/teal_700"
        app:layout_constraintStart_toEndOf="@+id/searchImageView"
        app:layout_constraintTop_toBottomOf="@+id/searchProductName" />

    <TextView
        android:id="@+id/searchProductDate"
        android:layout_width="79dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/amaranth"

        android:text="22/11/2022"
        android:textColor="@color/teal_700"
        app:layout_constraintStart_toEndOf="@+id/searchCalendarImageView"
        app:layout_constraintTop_toBottomOf="@+id/searchProductName" />

    <ImageView
        android:id="@+id/searchStoreImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:tint="@color/backgroundBlue"
        app:layout_constraintStart_toEndOf="@+id/searchImageView"
        app:layout_constraintTop_toBottomOf="@+id/searchProductPrice"
        app:srcCompat="@drawable/ic_baseline_store_24"
        tools:ignore="UseAppTint" />

    <ImageView
        android:id="@+id/searchCalendarImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:tint="@color/backgroundBlue"
        app:layout_constraintStart_toEndOf="@+id/searchProductPrice"
        app:layout_constraintTop_toBottomOf="@+id/searchProductName"
        app:srcCompat="@drawable/ic_baseline_calendar_month_24"
        tools:ignore="UseAppTint" />

    <ImageView
        android:id="@+id/searchSizeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:tint="@color/backgroundBlue"
        app:layout_constraintStart_toEndOf="@+id/searchStoreName"
        app:layout_constraintTop_toBottomOf="@+id/searchProductPrice"
        app:srcCompat="@drawable/ic_baseline_height_24"
        tools:ignore="UseAppTint" />

    <TextView
        android:id="@+id/searchStoreName"
        android:layout_width="74dp"
        android:layout_height="17dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:text="Mikroma."
        android:textColor="@color/design_default_color_error"
        app:layout_constraintStart_toEndOf="@+id/searchStoreImageView"
        app:layout_constraintTop_toBottomOf="@+id/searchProductPrice" />

    <TextView
        android:id="@+id/searchSizeName"
        android:layout_width="58dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:text="250ml"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintStart_toEndOf="@+id/searchSizeImageView"
        app:layout_constraintTop_toBottomOf="@+id/searchProductPrice" />

    <ImageButton
        android:id="@+id/buttonDelete"
        android:layout_width="52dp"
        android:layout_height="111dp"
        android:layout_marginBottom="3dp"
        android:backgroundTint="@color/backgroundBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_delete_forever_24"
        app:tint="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>